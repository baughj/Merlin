<html>
  <head>
    <title>Merlin</title>
    <%= stylesheet_link_tag "redmond/jquery-ui-1.8.10.custom.css" %>
    <%= stylesheet_link_tag "merlin" %>
    <%= javascript_include_tag "jquery/jquery-1.4.4.min" %>
    <%= javascript_include_tag "jquery/jquery-ui-1.8.10.custom.min" %>
    <%= javascript_include_tag "jquery/jquery.dataTables.min.js" %>
    <%= javascript_include_tag "merlin" %>
  </head>
  <body>
    <div class="header">
      <%= image_tag "merlin-logo.png" %>
    </div>
    <div id="bar" class="ui-widget-header ui-corner-tl ui-corner-tr ui-corner-bl ui-corner-br ui-helper-clearfix">
      <div class="bar_left">
        Active cloud: 
        <select name="cloudselect">
          <%= options_from_collection_for_select(Cloud.all, :id, :name) %>
        </select> Quick Links:
        <a href="new">new cloud</a> | <a href="new instance">new instance</a> | <a href="new volume">new volume</a>
      </div>
      <div class="bar_right">
        Merlin 0.0.1
      </div>
    </div>
    <div class="container">
      <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
        <thead>
	  <tr>
            <th>Status</th>
	    <th>Hostname</th>
	    <th>Instance</th>
            <th>Type</th>
            <th>Security Groups</th>
            <th>Root Key</th>
            <th>Status Details</th>
	  </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </body>
</html>
